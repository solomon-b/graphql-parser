%right LOW
%right '$' '{' '"' '"""'

graphqlDocument
  : graphqlDefinition
  | graphqlDefinition graphqlDocument

executableOrTypeSystemDefiniton
  : executableDefinition
  | typeSystemDefinition

executableDocument
  : executableDefinition
  | executableDefinition executableDocument

typeSystemDocument
  : typeSystemDefinition
  | typeSystemDefinition typeSystemDocument

graphqlDefinition
  : typeSystemDefinition
  | executableDefinition

typeSystemDefinition
  : schemaDefinition
  | typeDefinition
  | directiveDefinition

schemaDefinition
  : description 'schema' directives '{' rootOperationTypesDefinition '}'

rootOperationTypesDefinition
  : rootOperationTypesDefinition_

rootOperationTypesDefinition_
  : rootOperationTypeDefinition
  | rootOperationTypeDefinition rootOperationTypesDefinition_

rootOperationTypeDefinition
  : operationType ':' name

typeDefinition
  : scalarTypeDefinition
  | objectTypeDefinition
  | interfaceTypeDefinition
  | unionTypeDefinition
  | enumTypeDefinition
  | inputObjectTypeDefinition

scalarTypeDefinition
  : description 'scalar' name directives

objectTypeDefinition
  : description 'type' name implementsInterfaces directives fieldsDefinition

interfaceTypeDefinition
  : description 'interface' name implementsInterfaces directives fieldsDefinition

implementsInterfaces
  : 'implements' implementsInterfaces_
  | {- empty -}

implementsInterfaces_
  : name
  | '&' name
  | implementsInterfaces_ '&' name

fieldsDefinition
  : '{' fieldDefinitions '}'
  | {- empty -} %prec LOW

fieldDefinitions
  : fieldDefinition
  | fieldDefinition fieldDefinitions

fieldDefinition
  : description name argumentsDefinition ':' type directives

unionTypeDefinition
  : description 'union' name directives '=' unionMembers
  | description 'union' name directives '=' '|' unionMembers

unionMembers
  : name
  | name '|' unionMembers

enumTypeDefinition
  : description 'enum' name directives '{' enumValuesDefinition '}'

enumValuesDefinition
  : enumValueDefinition
  | enumValueDefinition enumValuesDefinition

enumValueDefinition
  : description name directives

inputObjectTypeDefinition
  : description 'input' name directives inputFieldsDefinition

directiveDefinition
  : description 'directive' '@' dir argumentsDefinition optRepeatable 'on' directiveLocations
  | description 'directive' '@' dir argumentsDefinition optRepeatable 'on' '|' directiveLocations

directiveLocations
  : directiveLocation
  | directiveLocation '|' directiveLocations

directiveLocation
  : executableDirectiveLocation
  | typeSystemDirectiveLocation

executableDirectiveLocation
  : 'QUERY'
  | 'MUTATION'
  | 'SUBSCRIPTION'
  | 'FIELD'
  | 'FRAGMENT_DEFINITION'
  | 'FRAGMENT_SPREAD'
  | 'INLINE_FRAGMENT'
  | 'VARIABLE_DEFINITION'

typeSystemDirectiveLocation
  : 'SCHEMA'
  | 'SCALAR'
  | 'OBJECT'
  | 'FIELD_DEFINITION'
  | 'ARGUMENT_DEFINITION'
  | 'INTERFACE'
  | 'UNION'
  | 'ENUM'
  | 'ENUM_VALUE'
  | 'INPUT_OBJECT'
  | 'INPUT_FIELD_DEFINITION'

inputFieldsDefinition
  : '{' inputValuesDefinition '}'
  | {- empty -} %prec LOW

argumentsDefinition
  : '(' inputValuesDefinition ')'
  | {- empty -}

inputValuesDefinition
  : inputValueDefinition
  | inputValueDefinition inputValuesDefinition

inputValueDefinition
  : description name ':' type optValue directives

executableDefinition
  : operationDefinition
  | fragmentDefinition

operationDefinition
  : operationType directives selectionSet
  | operationType name directives selectionSet
  | operationType variableDefinitions directives selectionSet
  | operationType name variableDefinitions directives selectionSet
  | selectionSet

fragmentDefinition
  : 'fragment' fragmentName typeCondition directives selectionSet

fragmentSpread
  : '...' fragmentName directives

inlineFragment
  : '...' typeCondition directives selectionSet
  | '...' directives selectionSet

fragmentName
  : name

field
  : aliasAndName directives
  | aliasAndName '(' arguments ')' directives
  | aliasAndName '(' arguments ')' directives selectionSet
  | aliasAndName directives selectionSet

selectionSet
  : '{' selections '}'

selections
  : selection
  | selection selections

selection
  : field
  | fragmentSpread
  | inlineFragment

optValue
  : value
  | {- empty -} %prec LOW

values
  : value
  | value values

value
  : 'null'
  | stringValue
  | float
  | int
  | bool
  | vlist
  | vobject
  | '$' ident

stringValue
  : '"' '"'
  | '"' string '"'
  | '"""' blockString '"""'

vlist
  : '[' ']'
  | '[' values ']'

vobject
  : '{' '}'
  | '{' object '}'

object
  : objectField
  | objectField object

objectField
  : name ':' value

operationType
  : 'query'
  | 'mutation'
  | 'subscription'

aliasAndName
  : name ':' name
  | name

name
  : ident

arguments
  : argument
  | arguments argument

argument
  : name ':' value
  | '$' name ':' value

variableDefinitions
  : '(' variableDefinitions_ ')'

variableDefinitions_
  : variableDefinition
  | variableDefinition variableDefinitions_

variableDefinition
  : '$' name ':' type optValue directives

typeCondition
  : 'on' name

type
  : name
  | type '!'
  | '[' type ']'

directives
  : directives_
  | {- empty -}

directives_
  : directive
  | directive directives_

directive
  : '@' dir
  | '@' dir '(' arguments ')'

description
  : stringValue
  | {- empty -}

optRepeatable
  : 'repeatable'
  | {- empty -}